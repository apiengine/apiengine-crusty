#!/bin/sh

grep -q : ${CRUSTY_FILTERED}
if [ $? = 0 ]; then
    fail '${CRUSTY_MATRIX} contains separator character :'
fi

cat ${CRUSTY_FILTERED}                       | \
grep -v '^#'                             | \
 sed -e 's/./:/155'                        \
     -e 's/./:/111'                        \
     -e 's/./:/109'                        \
     -e 's/./:/93'                         \
     -e 's/./:/87'                         \
     -e 's/./:/80'                         \
     -e 's/./:/75'                         \
     -e 's/./:/52'                         \
     -e 's/^/:/g'                          \
     -e 's/$/:/g'                          \
     -e 's/ *:/:/g'                        \
     -e 's/: */:/g'                        \
> ${CRUSTY_COLLAPSED}
