#!/bin/sh

specs_split() {
    __response=`echo $@ | cut -d: -f2`
    __location=`echo $@ | cut -d: -f3`
    __auth=`    echo $@ | cut -d: -f4`
    __error=`   echo $@ | cut -d: -f5`
    __code=`    echo $@ | cut -d: -f6`
    __cmd=`     echo $@ | cut -d: -f7`
    __method=`  echo $@ | cut -d: -f8`
    __args=`    echo $@ | cut -d: -f9`
    __url=`     echo $@ | cut -d: -f10`
}

specs_show() {
    echo "__response: $__response"
    echo "__location: $__location"
    echo "__auth    : $__auth"
    echo "__error   : $__error"
    echo "__code    : $__code"
    echo "__cmd     : $__cmd"
    echo "__method  : $__method"
    echo "__args    : $__args"
    echo "__url     : $__url"
}
