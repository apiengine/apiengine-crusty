#!/bin/sh



specs() {
    local name
    local cut
    local i

    # FIX in need of some Mast3rful love...

    __0=`echo $@ | cut -d: -f2`
    __1=`echo $@ | cut -d: -f3`
    __2=`echo $@ | cut -d: -f4`
    __3=`echo $@ | cut -d: -f5`
    __4=`echo $@ | cut -d: -f6`
    __5=`echo $@ | cut -d: -f7`
    __6=`echo $@ | cut -d: -f8`
    __7=`echo $@ | cut -d: -f9`
    __8=`echo $@ | cut -d: -f10`

    i=0; cut=2
    for name in ${__columns}; do
        cut=`expr ${i} + 2`
        eval '__'${name}'=${__'${i}'}'
        math_inc "i"
    done
    specs_check
}

specs_check() {
    local code
    code=`echo $__code | sed 's/[0-9][0-9][0-9]/___/'`
    if [ "${code}" != "___" ]; then
        bomb_fail "no http return code defined in matrix"
    fi
}

specs_show() {
    echo "__args    : $__args"
    echo "__auth    : $__auth"
    echo "__code    : $__code"
    echo "__cmd     : $__cmd"
    echo "__location: $__location"
    echo "__method  : $__method"
    echo "__response: $__response"
    echo "__url     : $__url"
}
