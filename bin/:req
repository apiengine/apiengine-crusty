#!/bin/sh

req() {
    local injectable

    req_mandatory; _mandatory=$__
    req_optional; _optional=$__
    json_merge ${_mandatory} ${_optional}
    __payload=$__

    req_injectable ${__url}; injectable=$__
    eval __url=${injectable}
}

req_mandatory() {
    local i=0
    local json="{}"
    array_len "__args__m"; local len=$__
    while [ "${i}" != "${len}" ]; do
        array_get "__args__m" $i; local k=$__
        array_get "__cmdline" $i; local v=$__
        
        # encode in URL or PAYLOAD ... not both
        string_contains ${__url} "#${k}"
        if [ "$__" = "true" ]; then
            #echo "........................URL (${k})"
            eval _${k}_=${v}
        else
            #echo ".......................JSON (${k})"
            json_add "${json}" "${k}" "${v}"; json=$__
        fi
        math_inc "i"
    done
    __=${json}
}

req_optional() {
    # FIX the following should be encapsulated in :param
    array_last "__cmdline"; local json=$__
    json_is "${json}"
    if [ "$__" = "true" ]; then
        __=${json}
    else
        __="{}"
    fi
    # FIX validate each optional field
}

req_injectable() {
    __=`echo $1 | sed 's,/#\([^/]*\),/${_\1_},g'`
}
