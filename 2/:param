#!/bin/sh

# FIX use array_* and value_*
param_build() {
    local pre=$1
    shift

    array_create ${pre}
    array_create ${pre}_opt
    array_create ${pre}__m
    array_create ${pre}__o

    local w=""

    for w in $@
    do
        array_append ${pre} ${w}

        _param_optional ${w}; local opt=$__
        array_append ${pre}_opt ${opt}

        if [ "${opt}" = "true" ]; then
            array_append ${pre}__o ${w}
        else
            array_append ${pre}__m ${w}
        fi
    done
}

_param_optional() {
    string_contains $1 "*"
}
